<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".Fragment.HomeFragment">

    <TextView
        android:id="@+id/textView"
        style="@style/mainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:text="@string/homeTitle"
        android:textSize="@dimen/fragmentTitle"
        android:gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/myFortune"
                android:text="@string/myFortune"
                android:textSize="@dimen/smallTextSize"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/mainTextColor"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/shape_rounded_corners_10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <Button
                android:id="@+id/compatibility"
                android:layout_width="match_parent"
                android:textColor="@color/mainTextColor"
                android:layout_height="100dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_rounded_corners_10dp"
                android:text="@string/compatibility"
                android:textSize="@dimen/smallTextSize"/>

            <Button
                android:id="@+id/omikuji"
                android:layout_width="match_parent"
                android:textColor="@color/mainTextColor"
                android:layout_height="100dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_rounded_corners_10dp"
                android:text="@string/omikuji"
                android:textSize="@dimen/smallTextSize" />

            <Button

                android:layout_width="match_parent"
                android:textColor="@color/mainTextColor"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/shape_rounded_corners_10dp"
                android:text="@string/tarot"
                android:textSize="@dimen/smallTextSize" />

            <Button

                android:layout_width="match_parent"
                android:textColor="@color/mainTextColor"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/shape_rounded_corners_10dp"
                android:text="@string/secret1"
                android:textSize="@dimen/smallTextSize" />

            <Button

                android:layout_width="match_parent"
                android:textColor="@color/mainTextColor"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/shape_rounded_corners_10dp"
                android:text="@string/secret2"
                android:textSize="@dimen/smallTextSize" />

            <Button

                android:layout_width="match_parent"
                android:textColor="@color/mainTextColor"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/shape_rounded_corners_10dp"
                android:text="@string/secret3"
                android:textSize="@dimen/smallTextSize" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>