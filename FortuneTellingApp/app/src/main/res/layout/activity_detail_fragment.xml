<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainBackgroundColor"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    tools:context=".Fragment.DetailFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/detailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/resultTitle"
            android:textSize="@dimen/fragmentTitle"
            android:textAlignment="center"
            android:theme="@style/mainText"
            android:gravity="center" />

        <TextView
            android:id="@+id/character"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ああああああ"
            android:textSize="@dimen/middiumTextSize"
            android:theme="@style/errorText"
            android:gravity="center"/>

        <TextView
            android:id="@+id/detailCharacter"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:text="@string/detailLink"
            android:textSize="@dimen/smallTextSize"
            android:theme="@style/mainText"
            android:gravity="left"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>