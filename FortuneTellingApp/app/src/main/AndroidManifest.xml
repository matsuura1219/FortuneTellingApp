<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fortunetellingapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:fitsSystemWindows="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".AccountActivity"></activity>
        <activity android:name=".Fragment.OmikujiFragment" />
        <activity android:name=".Fragment.CompatibilityDetailFragment" />
        <activity android:name=".Fragment.CompatibilityResultFragment" />
        <activity android:name=".Fragment.CompatibilityFragment"/>
        <activity android:name=".Fragment.DetailFragment" />
        <activity android:name=".Fragment.ResultFragment" />
        <activity android:name=".Fragment.MyFortuneFragment"/>
        <activity android:name=".Fragment.AccountFragment" />
        <activity android:name=".Fragment.SNSFragment" />
        <activity android:name=".Fragment.SearchFragment" />
        <activity android:name=".Fragment.HomeFragment" />
        <activity android:name=".MenuActivity"
                  android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>